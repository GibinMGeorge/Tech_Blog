<div class="card white p-2 mx-auto my-3 text-black"> 
  <div class="row justify-content-center"> 
    <div class="col-md-8"> 
      <h2>{{post.title}}</h2>
      <p>Posted by: {{post.user.username}}</p>
      <p>On: {{post.createdAt}}</p>
      <p>{{post.text}}</p>
      <div class="bg-primary-subtle rounded-top-3 py-1"></div>
      <div class="card-action">
        <button type="button" class="btn btn-small waves-effect waves-light" id = "update-post-button" data-toggle="modal" data-target="#updatePost">Update</button>
        <button type="button" class="btn btn-small red darken-2 delete-post-button ml-2" id = "delete-post-button" data-id="{{post.id}}">Delete</button> 
      </div>
    </div>
  </div>
</div>

<div class="row m-5">
  <form class="col s12 form comment-form"> 
    <div class="row">
      <div class="input-field col s12">
        <textarea id="comment-text" class="materialize-textarea"></textarea>
        <label for="comment-text">Add your comment</label>
      </div>
    </div>
    <button class="btn waves-effect waves-light" id = "comment-button" type="submit" data-id="{{post.id}}">Post your comment</button>
  </form>
</div>

{{#each comments as |comment|}}
{{> comment-details}}
{{/each}}

<!-- Modal -->
<div class="modal" id="updatePost">
  <div class="modal-content">
    <h4>Update Post:</h4>
    <form>
      <div class="input-field">
        <input id="post-title" type="text" class="validate" value="{{post.title}}">
        <label for="post-title">Title</label>
      </div>
      <div class="input-field">
        <textarea id="post-text" class="materialize-textarea">{{post.text}}</textarea>
        <label for="post-text">Text</label>
      </div>
      <div class="modal-footer">
        <button class="btn waves-effect waves-light" type="submit" data-id="{{post.id}}">Submit</button>
        <button class="btn red modal-close" type="button">Close</button>
      </div>
    </form>
  </div>
</div>

<!-- Materialize CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">

<!-- Materialize JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<script src="/js/post.js"></script>
